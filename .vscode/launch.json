// A launch configuration that launches the extension inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
			"sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/index.js" ]
        },
        {
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/server/server.js" ]
		}
    ]
}